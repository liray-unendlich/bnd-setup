# ノード1（メインノード）環境変数設定

# データベース設定
POSTGRES_DB=taskdb
POSTGRES_USER=worker
POSTGRES_PASSWORD=secure_db_password_change_me
POSTGRES_PORT=5432

# Redis設定
REDIS_PORT=6379

# MinIO設定
MINIO_ROOT_USER=admin
MINIO_ROOT_PASS=secure_minio_password_change_me
MINIO_BUCKET=workflow

# 共通設定
RUST_LOG=info
SEGMENT_SIZE=21
REDIS_TTL=57600
SNARK_TIMEOUT=180
RISC0_KECCAK_PO2=17

# CUDAライブラリパス
LD_LIBRARY_PATH=/usr/local/cuda-12.2/compat/

# ブローカー設定（要変更）
PRIVATE_KEY=your_private_key_here
RPC_URL=your_rpc_url_here
WS_RPC_URL=your_ws_rpc_url_here
BOUNDLESS_MARKET_ADDRESS=your_market_address_here
SET_VERIFIER_ADDRESS=your_verifier_address_here
ORDER_STREAM_URL=your_order_stream_url_here

# イメージバージョン（必要に応じて変更）
REDIS_IMG=redis:7.2.5-alpine3.19
POSTGRES_IMG=postgres:16.3-bullseye
MINIO_IMG=minio/minio:RELEASE.2024-05-28T17-19-04Z
GRAFANA_IMG=grafana/grafana:11.0.0